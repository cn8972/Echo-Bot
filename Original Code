# Clone the source repo shallowly, checkout the commit, copy what is needed, and commit
gh repo clone microsoft/BotBuilder-Samples -- --depth=1
cd BotBuilder-Samples
git fetch origin 34ed2827c5244a178c26d0617adbc89c86d6d9b6
git checkout 34ed2827c5244a178c26d0617adbc89c86d6d9b6

# Copy a directory from the sample into the target repo (replace paths as needed)
# Example copies a whole sample folder
rsync -a --exclude ".git" samples/csharp_dotnetcore/13.core-bot ../<target-repo>/

cd ../<target-repo>
git add .
git commit -m "Copy BotBuilder sample from commit 34ed282"
